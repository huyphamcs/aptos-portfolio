{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "nodeVersion": "18.x",
  "functions": {
    "app/**": {
      "maxDuration": 30
    }
  },
  "env": {
    "NEXT_PUBLIC_APTOS_NETWORK": "testnet",
    "NEXT_PUBLIC_APTOS_GRAPHQL_URL": "https://api.testnet.aptoslabs.com/v1/graphql"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
